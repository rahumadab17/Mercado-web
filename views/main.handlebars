<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <title>Mercado Web</title>
</head>
<body>
    {{> Menu}}
    {{> MainSection}}







    <script src="https://kit.fontawesome.com/3e44e50226.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
    <script src="/js/jquery.js"></script>
    <script>
        $(document).ready(function(){

            let productos = []

            $(".producto img").click(function (){
                $(this).removeClass('opacity-50');
                let productoSeleccionado = this.id;
                if (!productos.includes(productoSeleccionado)){
                    productos.push(productoSeleccionado);
                } 
            });

            $(".producto img").dblclick(function(){
                $(this).addClass('opacity-50');
                let productoSeleccionado = this.id;
                let index = productos.indexOf(productoSeleccionado);
                if (index !== -1) {
                    productos.splice(index, 1);
                }
            });

            $("#botonCarrito").click(function(){
                $(".modal-body").empty();
                productos.forEach(function(data){
                    $(".modal-body").append(`<img src='/img/${data}.png' class='w-25'>`)
                });
            });
        });
    </script>
</body>
</html>
